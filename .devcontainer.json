{
    "name": "Node.js & TypeScript",
    "image": "mcr.microsoft.com/devcontainers/typescript-node:1-20-bullseye",
    "forwardPorts": [4321],
    "portsAttributes": {
        "4321": {
            "label": "Astro",
            "onAutoForward": "openBrowser"
        }
    },
    "remoteUser": "node",
    "postCreateCommand": "npm install",
    "customizations": {
        "vscode": {
            "extensions": ["astro-build.astro-vscode"]
        }
    }
}